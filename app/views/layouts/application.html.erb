<!DOCTYPE html>
<html>
  <head>
    <title>CheckUpRestaurants</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <header class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="col-12 clearfix">
        <%= link_to root_path do %>
          <h5>Check Up Restaurants</h5>
        <% end %>
        
        <div class="float-right">
          <ul class="nav pull-right">
            <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user) do %>
                  <%= attachment_image_tag current_user, :image_id, fallback:"sample.jpg", size: "40x40" %>
                  マイページ
                <% end %>
              </li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, "data-confirm" => "ログアウトしますか" %></li>
              
            <% else %>
              <li><%= link_to "新規登録", new_user_registration_path %></li>
              <li><%= link_to "ログイン", new_user_session_path %></li>
            <% end %>
          </ul>
        </div>
        
      </div>
    </header>
    
    <div class="container-fluid">
      <div class="mx-auto">
        <div class="col-xs-12">
          <p  class="text-center"><%= flash[:notice] %></p>
          <%= yield %>
        </div>
      </div>
    </div>
    
    <footer class="backred">
      <div>
        <%= link_to "お問い合わせはこちらから", inquiry_path %>
      </div>
    </footer>
    </div>
  </body>
</html>
