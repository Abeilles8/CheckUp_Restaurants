<div class="container">
  <div class="row">
    <!--Userのプロフィール-->
    <div class="col-md-4">
      <%= attachment_image_tag @user, :image, fallback: "sample.jpg", size: "300x300" %>
      <%= render "public/relationships/follow_button", user: @user %>
    </div>
    <div class="col-md-8 ">
      <li>ユーザー名 <%= @user.name %></li>
      <li>メールアドレス <%= @user.email %></li>
      <li>国籍 <%= @user.my_country %></li>
      <li>自己紹介 <%= @user.introduction %></li>
      <li>投稿数: <%= @user.reviews.count %></li>
      <li>いいねしてもらった数: <%= @user.likes.count %></li>
      <li>コメント数</li>
      <!--current_userのみ表示-->
      <% if current_user.id == @user.id %>
        <li>お気に入り:
          <%= link_to favorite_path(@user) do %>
            <%= @user.favorites.count %>
          <% end %>
        </li>
        <%= link_to "プロフィールの編集", edit_user_path(current_user) %>
        <%= link_to "設定"%>
      <% end %>
    </div>
  </div>
</div>

<!--投稿した一覧-->
<div>
  <%= link_to "一覧はこちら", reviews_path%>
  <tbody>
    <table class="table none">
      <thead class="thead-dark">
        <tr>
          <th>レストラン画像</th>
		      <th>レストラン名</th>
		      <th>エリア</th>
		      <th>ジャンル</th>
		      <th>レビュー内容</th>
		      <th></th>
		    </tr>
      </thead>

      <% @reviews.each do |review| %>
        <tr>
          <th>
            <%= link_to review_path(review.id) do %>
		      		<%= attachment_image_tag review, :image, fallback:"sample.jpg", size: "100x100" %>
		      	<% end %>
          </th>
  	      <th><%= review.name %></th>
  	      <th><%= review.country.name %></th>
  	      <th>
  	        <% review.review_genres.each do |review_genre| %>
		      		<%= attachment_image_tag review_genre.genre, :image, fallback:"sample.jpg", size: "20x20" %>
							<%= review_genre.genre.name %>
						<% end %>
  	      </th>
  	      
  	      <th><%= review.content %></th>
  	      <th></th>
  	    </tr>
		  <% end %>
    </table>
  </tbody>
</div>