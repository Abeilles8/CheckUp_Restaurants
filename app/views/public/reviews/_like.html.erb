<% if current_user.liked_by?(review.id) %>
	<!--いいねを外す-->
	<%= link_to destroy_like_path(review), method: :DELETE do %>
		<%= image_tag "like.png", size: "40x40"%>
	<% end %>
	<%= review.likes.count %>
<% else %>
	<!--いいねする-->
	<%= link_to create_like_path(review), method: :POST do %>
		<%= image_tag "like-plus", size: "35x35"%>
	<% end %>
	<%= review.likes.count %>
<% end %>