<% if current_user.favorited_by?(review.id) %>
	<!--お気に入りから外す-->
	<%= link_to destroy_favorite_path(review), method: :DELETE do %>
		<%= image_tag "favorite.png", size: "35x40" %>
	<% end %>
<% else %>
	<!--お気に入り登録-->
	<%= link_to create_favorite_path(review), method: :POST do %>
		<%= image_tag "favorite-plus.png", size: "35x35" %>
	<% end %>
<% end %>