<div class="container">
	<%= link_to "新規reviewはこちら>> ", new_review_path %>
	
	<div>
		<div>
		  <div class="row">
		  <% @reviews.each do |review| %>
		    <div class="none">
		      <div>
		      	<!--レビュー画像-->
		      	<%= link_to review_path(review.id) do %>
		      		<%= attachment_image_tag review, :image_id, fallback:"review-image.jpg", size: "300x300" %>
		      	<% end %><br/>
		      	<!--いいね＆お気に入り-->
		      	<!--自分の投稿には表示しない-->
		      	<% if current_user.id != review.user.id %>
			      	<%= render "favorite", review: review %>
			      	<%= render "like", review: review %>
		      	<% end %>
		      	
		      	<%= review.country.name %>　<%= review.name %>　<%= review.genre.name %>
		      </div>
		    </div>
		  <% end %>
	</div>
</div>
