<div class="text-center">
  <h3>レビュー編集</h3>
  <div class="container">
    <div class="row none">
      <%= form_with model:@review, url:review_path, local:true do |f| %>
        <div class="d-flex align-items-center justify-content-center">
          <% @review.review_images.each do |image| %>
            <%= attachment_image_tag image, :image, fallback:"review-image.jpg", size: "300x300" %>
          <% end %>
        </div>
          <%= f.attachment_field  :review_images_images, multiple: true %>
        <table>
          <tr>
          	<th><%= f.label "レストランの名前" %></th>
          	<td><%= f.text_field :name, class: "col-12", placeholder: "レストラン名" %></td>
          </tr>
          
          <tr>
          	<th><%= f.label "エリア選択"%></th>
          	<td><%= f.collection_select :country_id, Country.all, :id, :name %></td>
          </tr>
          <tr>
					<th><%= f.label "住所"%></th>
					<td><%= f.text_field :address, class: 'form-control', placeholder: "詳細に"%></td>
				</tr>
          
          <tr>
          	<th><%= f.label "スタイル"%></th>
          	<td><%= f.collection_select :style_id, Style.all, :id, :name  %></td>
          </tr>
          
          <tr>
          	<th><%= f.label "ジャンル選択"%></th>
          	<td><%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name do |genre| %>
          			<%= genre.label do %>
          				<%= genre.check_box %>
          				<%= attachment_image_tag genre.object, :image, fallback:"sample.jpg", size: "20x20" %>
          				<%= genre.object.name %>
          			<% end %>
          		<% end %>
          	</td>
          </tr>
          
          <tr>
          	<th><%= f.label "レビュー" %></th>
          	<td><%= f.text_area :content, class: "col-12", placeholder: "レビュー内容はここに" %></td>
          </tr>
        </table>
        <div>
          <%= link_to "戻る", review_path(@review.id) %>
          <%= f.submit "更新" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
