<!--問い合わせ確認画面-->

<div class="d-flex align-items-center justify-content-center">
  <%= form_with model:@inquiry , url: inquiry_thanks_path, local:true do |f| %>
  <div>
    <h1>お問い合わせ内容</h1>
  </div>
    
    <table>
      <tr>
        <th>名前</th>
        <td>
          <%= f.hidden_field :name %>
          <%= @inquiry.name %>様
        </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td>
          <%= f.hidden_field :email %>
          <%= @inquiry.email %>
        </td>
      </tr>
      <tr>
        <th>タイトル</th>
        <td>
          <%= f.hidden_field :title %>
          <%= @inquiry.title %>について
        </td>
      </tr>
      <tr>
        <th>お問い合わせ内容</th>
        <td>
          <%= f.hidden_field :message %>
          <%= @inquiry.message %>
        </td>
      </tr>
    </table>
    <%= f.submit "送信", :class => "btn btn-primary" %>
  <% end %>
</div>
