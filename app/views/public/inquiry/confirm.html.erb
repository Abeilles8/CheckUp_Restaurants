<!--問い合わせ確認画面-->
<div>
    <h1>お問い合わせ</h1>
</div>

<%= form_with model:@inquiry , url: inquiry_thanks_path, local:true do |f| %>
  <table>
    <tr>
      <th>名前</th>
      <td>
        <%= f.hidden_field :name %>
        <%= @inquiry.name %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.hidden_field :email %>
        <%= @inquiry.email %>
      </td>
    </tr>
    <tr>
      <th>タイトル</th>
      <td>
        <%= f.hidden_field :title %>
        <%= @inquiry.title %>について
      </td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td>
        <%= f.hidden_field :message %>
        <%= @inquiry.message %>
      </td>
    </tr>
  </table>
  <%= f.submit "送信", :class => "btn btn-primary" %>
<% end %>