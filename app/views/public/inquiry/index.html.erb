<!--問い合わせが画面-->

<div class="d-flex align-items-center justify-content-center"> <!--中央-->
  <%= form_with model:@inquiry , url: inquiry_confirm_path, local:true do |f| %>
    <div>
      <h1>お問い合わせ</h1>
    </div>
    
    <table>
      <tr>
        <th>名前<span class="required">(必須)</span></th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>メールアドレス<span class="required">(必須)</span></th>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <th>タイトル<span class="required">必須</span></th>
        <td><%= f.text_field :title %>について、</td>
      </tr>
      <tr>
        <th>お問い合わせ内容</th>
        <td><%= f.text_area :message %></td>
      </tr>
    </table>
    <%= f.submit "確認", class: "btn btn-primary" %>
  <% end %>
</div>