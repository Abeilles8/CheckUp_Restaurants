<div class="container">
	<h1>レビュー登録</h1>
	
	<div class="row">
		<div>
			<%= form_with model:@review, url:reviews_path, local:true do |f| %>
				<div>
					<%= f.label "レストランの名前" %>
					<%= f.text_field :name %>
				</div>
				<div>
					<%= f.label "レストラン画像" %>
					<%= f.file_field :image %>
				</div>
				<div>
					<%= f.label "レビュー" %>
					<%= f.text_area :content %>
				</div>
				<div>
					<%= f.submit "投稿" %>
				</div>
			<% end %>
		</div>
	</div>
</div>