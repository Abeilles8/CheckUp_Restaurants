<h3>レビュー登録</h3>

<div class="row">
	<div>
		<%= form_with model: @review, url: reviews_path, local:true do |f| %>
			<div>
				<%= f.label "レストランの名前" %>
				<%= f.text_field :name %>
			</div>
			<div>
				<%= f.label "エリア選択"%>
				<%= f.collection_select :country_id, Country.all, :id, :name  %>
			</div>
			<div>
				<%= f.label "スタイル"%>
				<%= f.collection_select :style_id, Style.all, :id, :name  %>
			</div>
			<div>
				<%= f.label "ジャンル選択"%>
				<%= f.collection_select :genre_id, Genre.all, :id, :name  %>
			</div>
			<div>
				<%= f.label "レストラン画像" %>
				<%= f.file_field :image %>
			</div>
			<div>
				<%= f.label "レビュー" %>
				<%= f.text_area :content %>
				
			</div>
			<div>
				<%= f.submit "投稿" %>
			</div>
		<% end %>
	</div>
</div>
