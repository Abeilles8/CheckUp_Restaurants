<h3 class="text-center">レビュー登録</h3>
<div>
	<div  class="row">
		<%= form_with model: @review, url: reviews_path, local:true do |f| %>
			<div>
				<%= f.label "レストラン画像" %>
				<%= f.file_field :image %>
			</div>
			<div>
				<%= f.label "レストランの名前" %>
				<%= f.text_field :name, class: "col-12" %>
			</div>
			<div>
				<%= f.label "エリア選択"%>
				<%= f.collection_select :country_id, Country.all, :id, :name %>
			</div>
			<div>
				<%= f.label "スタイル"%>
				<%= f.collection_select :style_id, Style.all, :id, :name  %>
			</div>
			<div>
				<%= f.label "ジャンル選択"%>
				<%= f.collection_select :genre_id, Genre.all, :id, :name  %>
			</div>
			<div>
				<%= f.label "レビュー" %>
				<%= f.text_area :content, class: "col-12"  %>
				
			</div>
			<div>
				<%= f.submit "投稿" %>
			</div>
		<% end %>
	</div>
</div>
