<div class="container">
	<h3>スタイル編集</h3>
	<div class="row">
    <%= form_with model:@style, url:admin_style_path, local:true do |f| %>
      <%= f.label "スタイル名" %> <%= f.text_field :name %>
      
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, "有効", {value: :true} %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "無効", {value: :false} %>
      
      <%= f.submit "変更を保存" %>
    <% end %>
	</div>
</div>