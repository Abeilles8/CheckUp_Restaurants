<div class="container">
  <h3>スタイル一覧</h3>

<div>
  <p><%= link_to "ジャンル>>", admin_genres_path %></p>
  <p><%= link_to "国名>>", admin_countries_path %></p>
</div>

<div>
  <%= form_with model:@style, url:admin_styles_path, local:true do |f| %>
    <%= f.label "スタイル" %> <%= f.text_field :name %>
    
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "有効", {value: :true} %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "無効", {value: :false} %>
    
    <%= f.submit "追加" %>
  <% end %>
</div>

<tbody>
<% @styles.each do |style| %>
  <table>
    <thead>
      <tr>
        <th>スタイル名</th>
        <th>状態</th>
      </tr>
    </thead>
    
    <tr>
      <th><%= style.name %></th>
      <th><%= style.is_active == true ? "有効" : "無効" %></th>
      <th><%= link_to "編集", edit_admin_style_path(style) %></th>
    </tr>
  </table>
<% end %>
</tbody>

</div>