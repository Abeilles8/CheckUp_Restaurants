<div class="none">
  <h3 class="text-center">通貨の編集</h3>
  
	<div class="text-center">
	  <!--管理者へメッセージ-->
    <div>
      <p>通貨は<strong class="required">空白</strong>での投稿はできません。</p>
    </div>
    
    <%= form_with model:@currency, url:admin_currency_path, local:true do |f| %>
      <%= render "layouts/error_message", hoge: @currency %>
      <div>
        <p>[通貨]（例　＄）</p>
        <%= f.text_field :name %>
      </div>
      
      <div>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効", {value: :true} %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "無効", {value: :false} %>
      </div>
      
      <%= f.submit "変更を保存", class: "btn btn-primary" %>
    <% end %>
	</div>
</div>