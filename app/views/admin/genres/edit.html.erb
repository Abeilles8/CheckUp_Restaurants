<div class="container">
	<h3>ジャンル編集</h3>
	<div class="row">
	  
    <%= form_with model:@genre, url:admin_genre_path, local:true do |f| %>
      <%= f.label "ジャンル" %> 
      <%= f.text_field :name %><br/>
      <!--画像を表示させる-->
      <!--<= attachment_image_tag @genre, :image, :fill, 300, 300, format: 'jpeg' %>-->
      <%= f.attachment_field :image %>
      
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, "有効", {value: :true} %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "無効", {value: :false} %>
      
      <%= f.submit "変更を保存" %>
    <% end %>
	</div>
</div>