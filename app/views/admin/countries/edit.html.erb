<div class="none">
  <h3 class="text-center">国名編集</h3>
  
	<div class="text-center">
    <%= form_with model:@country, url:admin_country_path, local:true do |f| %>
      <%= render "layouts/error_message", hoge: @country %>
      <div>
        <p>[国名]（例　フランス）</p>
        <%= f.text_field :name %>
      </div>
      <div>
        <p>[通貨]（例　＄）</p>
        <%= f.text_field :currency %>
      </div>
      <div>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効", {value: :true} %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "無効", {value: :false} %>
      </div>
      
      <%= f.submit "変更を保存", class: "btn btn-primary" %>
    <% end %>
	</div>
</div>